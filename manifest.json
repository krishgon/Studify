{
  "manifest_version": 3,
  "name": "Studify - Mindful YouTube for Study & Focus",
  "version": "1.0.0",
  "description": "Block distracting YouTube content. Switch between Study Mode and Browse Mode for mindful, focused viewing.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Studify - Mindful YouTube for Study & Focus"
  },
  "icons": {
    "16": "icons/iconCirc16.png",
    "48": "icons/iconCirc48.png",
    "128": "icons/iconCirc128.png"
  }
}
